{
  "name": "Call From Browser",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Send selected phone number to Firebase and view your UID QR code.",
  "permissions": ["contextMenus", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Call From Browser"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
